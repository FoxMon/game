package sign;

import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class SignUpForm extends JFrame {
	
	DataTransferObject dto = new DataTransferObject(); // object dto
	
	private TextField name; // name
	private TextField address; // address
	private JPasswordField password; // password
	
	public SignUpForm() {
		
		Panel p = new Panel();
		
		setLayout(new BorderLayout());
		
		Label name = new Label("name");
		Label password = new Label("password");
		Label address = new Label("address");
		
		// send button.
		JButton send = new JButton("send");
		send.addActionListener(new ActionListener() {
			
			@Override
			public void actionPerformed(ActionEvent e) {
				
				Object obj = e.getSource();
				
				if((JButton)obj == send) { // set name, password, address.
					dto.setName(name.getText());
					dto.setPassword(password.getText());
					dto.setAddress(address.getText());
				}
				
				try {
					DataAccessObject.create(dto);
					
					System.out.println("Data Insert Success...");
				} catch(Exception e) {
					e.printStackTrace();
				}
			}
			
		});
		
		setSize(300, 300);
		setResizable(false);
		setVisible(true);
	}
}
